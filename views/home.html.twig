{% extends 'template.html.twig' %}

{% block content %}
<div class="row">
    <h3> Today: {{ "now"|date("m/d/Y") }}</h3>

    <form class="form-group" action='/trimet' method='post'>
        <label for='start'>Start</label>
        <input type="button" id="this_lat" name="this_lat" >
        <input type="button" id="this_lng" name="this_lng">
        <select class="form-control" id='start' name='start-point-id'>
            <option>Current Location</option>
            {% for location in locations %}
            <option value='{{ location.getId }}'>{{ location.getDescription }}</option>
            {% endfor %}
        </select>

        <br>
        <br>
        <label for='end'>End</label>
        <select class="form-control" id='end' name='end-point-id'>
            {% for location in locations %}
            <option value='{{ location.getId }}'>{{ location.getDescription }}</option>
            {% endfor %}
        </select><br>
        <label for="search">Enter an Address:</label>
        <input class="form-control" type="text" name="search" value="">
        <br>

        <label for="time">Time</label>
        <input class="form-control" type="text" name="time" value="{{time}}">
        <br>

        <button class="btn btn-success" type='submit'>Route</button>
    </form>
</div>
<div class="row">
    <div id="map" style="width: 75vw; height: 40vh;"></div>
</div>
{% endblock %}
